<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

<h2>Books</h2>

<table>
<thead>
<tr>
<th>Title</th>
<th>Body</th>
<th colspan="3"></th>
<tr>
</thead>
<% @books.each do |book| %>
  <tbody>
  <tr>

  <td><%= book.title %></td>
  
  <td><%= book.body %></td>
  
  <td><%=link_to "Show", book_path(book) %></td>
  <td><%=link_to "Edit", edit_book_path(book) %></td>
  <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
  </tr>
  </tbody>
  <%end%>
  </table>

 <% if @book.errors.any? %>
 <% @book.errors.full_messages.each do |message| %>
  <p><%= message %></p>
<% end %>
  
<% end %>

<h3>New book</h3>
<%= form_for(@book) do |f| %>
 
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
<br>
  <%= f.submit 'Create Book' %>

<% end %>